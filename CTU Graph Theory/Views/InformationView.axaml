<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CTU_Graph_Theory.Views.InformationView">

	<Grid RowDefinitions="auto *">
		<StackPanel Grid.Row="0" Orientation="Vertical" Margin="0 20 0 0">
			<StackPanel.Styles>
				<Style Selector="TextBlock">
					<Setter Property="HorizontalAlignment" Value="Center"/>
				</Style>
			</StackPanel.Styles>
			
			<TextBlock Classes="Headline6"
					   Text="Cảm ơn các bạn đã quan tâm đến ứng dụng của mình"/>
			<TextBlock Classes="Headline6"
					   Text="QR đến Github cho các bạn tham khảo:"/>
		</StackPanel>
		<Border Grid.Row="1" Padding="10">
			<Image Source="/Assets/Images/RepositoryQR.png" Stretch="Uniform"></Image>
		</Border>
		</Grid>
	
</UserControl>
